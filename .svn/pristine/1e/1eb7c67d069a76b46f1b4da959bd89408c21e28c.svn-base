        public void GetAllData()
        {
            string paramCustomerID = this.txtCustomerID.Text.Trim();
            DataSet myDs = new DataSet();
            myDs = myBUCustomerInfo.GetAllCustomerList(paramCustomerID);
            this.dgvData.DataSource = myDs.Tables[0];
        }
