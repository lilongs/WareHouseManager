             {
                 string str = @"select Product_ID,ProductName,Sales_Price,Sales_Quantity,TotalPrice,CustomerID,Name from Sales_info
                               left join  Customer on  Customer.Customer_ID= Sales_info.CustomerID where  (LastLeaveDate>='" + paramTime1 + "' and LastLeaveDate<='" + paramTime2 + "')and CustomerID='" + paramCustomerID + "' ";
                 DataSet ds = new DataSet();
                 ds = mySqlconn.Query(str);
                 return ds;
             }
             else
             {
                 string str = @"select Product_ID,ProductName,Sales_Price,Sales_Quantity,TotalPrice,CustomerID,Name from Sales_info
                               left join  Customer on  Customer.Customer_ID= Sales_info.CustomerID where  (LastLeaveDate>='" + paramTime1 + "' and LastLeaveDate<='" + paramTime2 + "')";
