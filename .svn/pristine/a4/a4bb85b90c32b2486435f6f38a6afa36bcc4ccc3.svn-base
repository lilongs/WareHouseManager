        public void SetCustomer()
        {
            DataTable mydt = new DataTable();
            mydt = myBUGetCustomerInfo.GetCustomerID();
            combCustomer.DataSource = mydt;
            combCustomer.DisplayMember = "Name";
            combCustomer.ValueMember = "Customer_ID";
        }

        private void btnExcel_Click(object sender, EventArgs e)
        {
            try
            {
                SaveFileDialog saveFileDialog = new SaveFileDialog();
                saveFileDialog.Filter = "文件格式(*.xlsx)|*.xlsx";
                if (saveFileDialog.ShowDialog() == DialogResult.OK)
                {
                    string name = saveFileDialog.FileName;
                    this.gdCInvent.ExportToXlsx(name);
                }
            }
            catch (Exception ex)
            {
                MessageBox.Show(ex.Message);
            }
        }

