using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Windows.Forms;
using BULayer;

namespace InventoryManagersystem.ProductManager
{
    public partial class frmClassAdd : Form
    {
        public frmClassAdd()
        {
            InitializeComponent();
        }
        BUUnitAdd myBUUnitAdd = new BUUnitAdd();
        public frmClassAdd(string paramID)
        {
            InitializeComponent();
            this.Text = "商品类别修改";
        }

        private void frmClassAdd_Load(object sender, EventArgs e)
        {

        }

        #region 输入判断  public bool CheckInput(string paramProductClassName)
        /// <summary>
        /// 输入判断
        /// </summary>
        /// <param name="paramProductClassName"></param>
        /// <param name="paramRemark"></param>
        /// <returns></returns>
        public bool CheckInput(string paramProductClassName)
        {
            bool ReturnValue = false;
            if (paramProductClassName.Length == 0)
            {
                this.txtProductClassName.SelectAll();
                this.txtRemark.Focus();
                MessageBox.Show("类别名称不能为空");
                ReturnValue = true;
            }
          
            return ReturnValue;
        }
        #endregion

        private void btnAdd_Click(object sender, EventArgs e)
        {
            string paramProductClassName = this.txtProductClassName.Text.Trim();
            string paramRemark = this.txtRemark.Text.Trim();

            if (CheckInput(paramProductClassName))
            {
                return;
            }
            int rows = 0;
            rows=myBUUnitAdd.ClassAdd(paramProductClassName, paramRemark);
            if (rows > 0)
            {
                this.DialogResult = DialogResult.Yes;
            }

        }

        private void btnClose_Click(object sender, EventArgs e)
        {
            this.DialogResult = DialogResult.No;
        }
    }
}
