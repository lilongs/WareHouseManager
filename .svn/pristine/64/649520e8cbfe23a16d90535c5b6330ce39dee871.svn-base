using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Data;

namespace DALayer
{
    public class DADeleteCustomer
    {
        Sqlconn mySqlconn = new Sqlconn();

        public int DeleteCustomer(string CustomerID)
        {
            string str = "select id from Sales_Info where CustomerID='" + CustomerID + "'";
            DataSet ds = new DataSet();
            ds = mySqlconn.Query(str);
            if (ds.Tables[0].Rows.Count == 0)
            {
                string Sql = string.Empty;
                int i;
                Sql = "delete from Customer where Customer_ID='" + CustomerID + "'";
                i = mySqlconn.ExecuteNonQuery(Sql);
                return i;
            }
            else
            {
                return 0;
            }
        }
    }
}
